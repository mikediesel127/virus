<!-- ---------EDIT PROFILE------------ -->
<!-- Edit Mode -->
<div id="edit-profile" class="profile-component" style="display: none;">

  <!-- Edit Profile Form -->
<form id="edit-profile-form">
  <!-- Username -->
  <label for="edit-username">Username:</label>
  <input type="text" id="edit-username" name="edit-username" required>

  <!-- Other form fields go here -->

  <!-- Current Profile Picture -->
  <label for="edit-profile-pic">Current Profile Picture:</label>
  <img src="/uploads" alt="Current Profile Picture" id="current-profile-pic" class="profile-pic">

  <!-- Change Profile Picture -->
  <label for="edit-profile-pic">Change Profile Picture:</label>
<input type="file" id="file-input" name="profilePicture" accept="image/*">

  <!-- Save Changes Button -->
  <button type="button" id="save-changes-btn">Save Changes</button>
</form>


  <!-- ... form elements for editing ... -->
  <button class="save-profile-btn">Save Changes</button>
  <button class="back-to-profile-btn">Back to Profile</button>

